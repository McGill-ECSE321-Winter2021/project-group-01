<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">




    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bookAppointmentText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Book An Appointment"
                android:textSize="30sp" />

            <Spinner
                android:id="@+id/bookAppointmentService"
                android:layout_width="224dp"
                android:layout_height="39dp"
                android:ems="10"
                android:hint="Service"
                android:inputType="text" />

            <TextView
                android:id="@+id/dateBookAppointmentText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Select a  New Date and a New Time"
                android:textSize="20sp" />

            <DatePicker
                android:id="@+id/datePickerBookAppointment"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:datePickerMode="spinner" />

            <TimePicker
                android:id="@+id/timePickerBookAppointment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:timePickerMode="spinner" />

            <TextView
                android:id="@+id/error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#FF0000"
                android:visibility="gone" />
        </LinearLayout>

<!--        <LinearLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:orientation="vertical">-->

            <TextView
                android:id="@+id/updateAppointmentText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Update An Appointment"
                android:textSize="30sp" />

            <Spinner
                android:id="@+id/updateAppointmentNewService"
                android:layout_width="224dp"
                android:layout_height="39dp"
                android:ems="10"
                android:hint="Service"
                android:inputType="text" />

            <TextView
                android:id="@+id/newDateUpdateAppointmentText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Select a Date and a Time"
                android:textSize="20sp" />

            <DatePicker
                android:id="@+id/newDatePickerUpdateAppointment"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:datePickerMode="spinner" />

            <TimePicker
                android:id="@+id/newTimePickerUpdateAppointment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:timePickerMode="spinner" />

            <TextView
                android:id="@+id/error2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#FF0000"
                android:visibility="gone" />
<!--        </LinearLayout>-->
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>