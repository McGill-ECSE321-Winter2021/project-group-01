<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bookAppointmentText"
                android:layout_width="371dp"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/comfortaa_bold"
                android:text="Book an Appointment"
                android:textColor="#FF9800"
                android:textSize="30sp" />

            <DatePicker
                android:id="@+id/dateBookAppointment"
                android:layout_width="wrap_content"
                android:layout_height="320dp"
                android:datePickerMode="spinner" />

            <Spinner
                android:id="@+id/serviceBookAppointment"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="Service" />

            <TextView
                android:id="@+id/dateBookAppointmentText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/comfortaa_bold"
                android:text="Select a Date and a Time"
                android:textColor="#FF9800"
                android:textSize="25sp" />

            <TimePicker
                android:id="@+id/timeBookAppointment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:timePickerMode="spinner" />

            <Button
                android:id="@+id/bookAppointmentButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:backgroundTint="#F7292626"
                android:onClick="makeAppointment"
                android:text="Book"
                android:textColor="#FF9800" />

            <TextView
                android:id="@+id/updateAppointmentText"
                android:layout_width="371dp"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/comfortaa_bold"
                android:text="Update Appointment"
                android:textColor="#FF9800"
                android:textSize="30sp" />


            <Spinner
                android:id="@+id/appointmentUpdateAppointment"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="Select an Appointment" />

            <Spinner
                android:id="@+id/newServiceUpdateAppointment"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="New Service" />

            <TextView
                android:id="@+id/newDateUpdateAppointmentText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/comfortaa_bold"
                android:text="Select a New Date and Time"
                android:textColor="#FF9800"
                android:textSize="25sp" />

            <DatePicker
                android:id="@+id/newDateUpdateAppointment"
                android:layout_width="wrap_content"
                android:layout_height="320dp"
                android:datePickerMode="spinner" />

            <TimePicker
                android:id="@+id/newTimeUpdateAppointment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:timePickerMode="spinner" />

            <Button
                android:id="@+id/updateAppointmentButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:fontFamily="@font/comfortaa_bold"
                android:onClick="updateAppointment"
                android:text="Update"
                android:textColor="#FF9800" />

            <TextView
                android:id="@+id/cancelAppointmentText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/comfortaa_bold"
                android:text="Cancel an Appointment"
                android:textColor="#FF9800"
                android:textSize="30sp" />

            <Spinner
                android:id="@+id/appointmentCancelAppointment"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="Select an Appointment" />

            <Button
                android:id="@+id/cancelAppointmentButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:fontFamily="@font/comfortaa_bold"
                android:onClick="cancelAppointment"
                android:text="Cancel"
                android:textColor="#FF9800" />


        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>