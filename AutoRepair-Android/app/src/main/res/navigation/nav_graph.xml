<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/Login">


    <fragment
        android:id="@+id/Profile"
        android:name="ca.mcgill.ecse321.autoRepair.Profile"
        android:label="@string/profile_label"
        tools:layout="@layout/profile"/>

    <fragment
        android:id="@+id/Login"
        android:name="ca.mcgill.ecse321.autoRepair.Login"
        android:label="@string/login_label"
        tools:layout="@layout/login">
        <action
            android:id="@+id/action_Login_to_Signup"
            app:destination="@id/Signup" />

        <action
            android:id="@+id/action_Login_to_Profile"
            app:destination="@id/Profile" />
    </fragment>

    <fragment
        android:id="@+id/Signup"
        android:name="ca.mcgill.ecse321.autoRepair.Signup"
        android:label="@string/signup_label"
        tools:layout="@layout/signup"/>

</navigation>